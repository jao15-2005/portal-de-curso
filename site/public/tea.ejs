        /* Escurece ao passar o mouse */
    }

    .menu-item:hover {
        background-color: #f0f0f0;
    }

    .progress-circle {
        position: relative;
        width: 48px;
        height: 48px;
        border-radius: 50%;
        background: conic-gradient(green var(--progress), #e5e7eb 0);
    }

    .progress-circle::before {
